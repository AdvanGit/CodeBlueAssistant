<UserControl x:Class="Hospital.WPF.Controls.Ambulatory.AmbMenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:Hospital.WPF.Views"
             xmlns:local="clr-namespace:Hospital.WPF.Controls.Ambulatory"
             mc:Ignorable="d" 
             d:DesignHeight="540.748" d:DesignWidth="305.094">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <Expander IsExpanded="True"
                      Template="{DynamicResource ExpanderAmbulatory}"
                      HorizontalContentAlignment="Center"
                      BorderThickness="0"
                      Background="Transparent">
                <Expander.Header>
                    <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center" FontSize="20">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1} {2}">
                                <Binding Path="CurrentEntry.Patient.FirstName"/>
                                <Binding Path="CurrentEntry.Patient.MidName"/>
                                <Binding Path="CurrentEntry.Patient.LastName"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Expander.Header>
                <TextBlock Text="LoremIpsum"/>
            </Expander>
            
            <ListBox x:Name="TabMenu" Background="Transparent">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template" Value="{DynamicResource ListBoxItemAmbMenu}"/>
                    </Style>
                </ListBox.Resources>
                
                <ListBoxItem x:Name="lb_item1" Padding="0">
                    <Expander  Header="Диагностика" IsExpanded="{Binding ElementName=lb_item1, Path=IsSelected}"
                               IsHitTestVisible="False"
                               Template="{DynamicResource ExpanderAmbulatory}"
                               BorderThickness="0" HorizontalContentAlignment="Center" Padding="10" FontSize="20">
                        <TextBlock Text="test2"/>
                    </Expander>
                </ListBoxItem>
                <ListBoxItem x:Name="lb_item2" Padding="0">
                    <Expander Header="Карта" IsExpanded="{Binding ElementName=lb_item2, Path=IsSelected}"
                              Template="{DynamicResource ExpanderAmbulatory}" IsHitTestVisible="False"
                              BorderThickness="0" HorizontalContentAlignment="Center" Padding="10" FontSize="20">
                        <TextBlock Text="test3"/>
                    </Expander>
                </ListBoxItem>
                <ListBoxItem x:Name="lb_item3" Padding="0">
                    <Expander Header="Сводка" IsExpanded="{Binding ElementName=lb_item3, Path=IsSelected}"
                             Template="{DynamicResource ExpanderAmbulatory}"
                               BorderThickness="0" HorizontalContentAlignment="Center" Padding="10" FontSize="20"> 
                        <TextBlock Text="test4"/>
                    </Expander>
                </ListBoxItem>
                <ListBoxItem x:Name="lb_item4" Padding="0">
                    <Expander Header="Отчет" IsExpanded="{Binding ElementName=lb_item4, Path=IsSelected}"
                              Template="{DynamicResource ExpanderAmbulatory}"
                               BorderThickness="0" HorizontalContentAlignment="Center" Padding="10" FontSize="20">
                        <TextBlock Text="test3"/>
                    </Expander>
                </ListBoxItem>
            </ListBox>
        </StackPanel>

    </Grid>
</UserControl>
