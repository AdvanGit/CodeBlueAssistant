<UserControl x:Class="Hospital.WPF.Controls.Ambulatory.AmbMenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:Hospital.WPF.Views"
             xmlns:controls="clr-namespace:Hospital.WPF.Controls.Ambulatory"
             xmlns:local="clr-namespace:Hospital.WPF.Controls.Ambulatory"
             mc:Ignorable="d" 
             d:DesignHeight="540.748" d:DesignWidth="305.094">

    <Grid>
        <StackPanel Orientation="Vertical" >
            <Expander IsExpanded="True" Foreground="{DynamicResource BrushForegroundMid}"
                      Template="{DynamicResource ExpanderAmbulatory}"
                      HorizontalContentAlignment="Center"
                      BorderThickness="0" Padding="15"
                      Background="Transparent">
                <Expander.Header>
                    <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center" FontSize="25">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1} {2}">
                                <Binding Path="CurrentEntry.Patient.FirstName"/>
                                <Binding Path="CurrentEntry.Patient.MidName"/>
                                <Binding Path="CurrentEntry.Patient.LastName"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Expander.Header>
                <TextBlock Text="LoremIpsum" Padding="15"/>
            </Expander>
            
            <ListBox x:Name="TabMenu" Background="Transparent" IsSynchronizedWithCurrentItem="True"
                     ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=view:Ambulatory}, Path=Navigator.GetControls}"
                     SelectedItem="{Binding RelativeSource={RelativeSource AncestorType=view:Ambulatory}, Path=Navigator.CurrentBody}">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderThickness"  Value="0"/>
                        <Setter Property="Template" Value="{DynamicResource ListBoxItemAmbMenu}"/>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander x:Name="ExpanderMenu" Template="{StaticResource ExpanderAmbulatory}" Header="{Binding Title}"
                                  Foreground="{DynamicResource BrushForegroundMid}"
                                  IsExpanded="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                  IsHitTestVisible="False" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BrushPrimaryBorderLight}"
                                  Padding="10" HorizontalContentAlignment="Center" FontSize="20">
                        </Expander>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Title}" Value="Диагностика">
                                <Setter TargetName="ExpanderMenu" Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="test"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Title}" Value="Карта">
                                <Setter TargetName="ExpanderMenu" Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="test 2"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Background="{DynamicResource BrushPrimaryBorderLight}" Height="1" VerticalAlignment="Top"/>
        </StackPanel>

    </Grid>
</UserControl>
