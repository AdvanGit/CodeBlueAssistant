@model Patient

<h2>Вход на сайт</h2>
 
<a asp-action="Register" asp-controller="Account">Регистрация</a>
 
<form asp-action="Login" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Введите номер телефона</label>
            <input type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <label asp-for="PasswordHash">Введите пароль</label>
            <input asp-for="PasswordHash" />
            <span asp-validation-for="PasswordHash" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>