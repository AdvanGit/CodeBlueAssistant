@model IEnumerable<Entry>

<div class="table-responsive rounded shadow">
	<table class="table table-hover m-0">
		<thead class="thead-dark" >
			<tr>
				<th>Специалист</th>
				<th>Адрес</th>
				<th>Дата</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Entry entry in Model)
			{
				<tr onclick="getEntries(@entry.DoctorDestination.Id, '@entry.TargetDateTime.ToShortDateString()')" style="cursor:pointer">
					<td scope="row">
						<span class="font-weight-bold">@entry.DoctorDestination.GetShortName()</span>
						<br/>@entry.DoctorDestination.Department.Title.Caption
					</td>
					<td>@entry.DoctorDestination.Department.Adress.Street @entry.DoctorDestination.Department.Adress.Number</td>
					<td>@entry.TargetDateTime.Date.ToLongDateString()</td>
				</tr>
			}
		</tbody>
	</table>
</div>
