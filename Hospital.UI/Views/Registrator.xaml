<UserControl x:Class="Hospital.UI.Views.Registrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:Hospital.UI.Views"
      xmlns:vm="clr-namespace:Hospital.UI.ViewModels.RegistratorViewModel"
      xmlns:searchBar="clr-namespace:Hospital.UI.Controls.Registrator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" >

    <UserControl.DataContext>
        <vm:RegistratorViewModel/>
    </UserControl.DataContext>

    <Grid MinWidth="1080" MaxWidth="1400" HorizontalAlignment="Stretch" Margin="20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <searchBar:RegSearchBar Grid.Row="0"/>
        <mah:TransitioningContentControl Grid.Row="1"/>
        <mah:TransitioningContentControl Content="{Binding CurrentRegTable}" Grid.Row="2"/>
    </Grid>
</UserControl>
