<UserControl x:Class="Hospital.UI.Views.Registrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:Hospital.UI.Views"
      xmlns:vm="clr-namespace:Hospital.UI.ViewModels.RegistratorViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" >

    <UserControl.DataContext>
        <vm:RegistratorViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <mah:TransitioningContentControl Grid.Row="0"  Content="{Binding CurrentRegTable}" Transition="LeftReplace"/>
        <mah:TransitioningContentControl Grid.Row="1" Content="{Binding CurrentPatientState}" Transition="LeftReplace"/>
        <GridSplitter Grid.Row="1" ResizeDirection="Rows" VerticalAlignment="Top" BorderBrush="Transparent" BorderThickness="1"/>
    </Grid>
</UserControl>
